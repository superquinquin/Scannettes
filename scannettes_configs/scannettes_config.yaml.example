cannettes:
  flask:
    static_url: "/static"
    secret_key: "xxxxxxx"
    application_root: "/"

  socketio:
    async_mode: "gevent"
    cors_allowed_origins: "*"

  odoo:
    odoo_create_new_purchase_line: True
    odoo_auto_purchase_validation: False
    delta_search_purchase: [0, 0, 0, 0]  # YEAR, MONTH, WEEK, DAY
    build_update_time: [23, 59, 50]  

  authenticator:
    users_path: "cannettes_configs/secrets.yaml"
    secret_key: "xxxxxx"
    salt: "xxxxxxx"
    max_age: 300


  mailling:
    smtp_port: 587
    smtp_server: ""
    email_login: ""
    email_password: ""
    receivers:
      - ""

  styles:
    colors:
      primary: "#fefa85"
      secondary: "#3C312E"
      ternary: "#FAEFEF"
      new_items: "#FD8789"
      new_items_if_exist: "#B5B3D0"
      mod_items: "#FDC087"
      normal_items: "#CFF2E8"
  
  camera:
    enable_video: True
    enable_audio: False
    ideal_width: 1920
    ideal_height: 1080
    ideal_mode: "environment"
    frame_width: 300
    frame_height: 200
    fps: 120
    pkg_frequency: 2
  
  logger:
    rotating: True
    filename: "./log/log.log"
    format: "[%(asctime)s][%(name)s][%(process)d][%(levelname)s] | %(message)s"
    level: "INFO"
    size: 5242880
    backup_count: 5
    logger_write_error: False
  
  backup:
    build_on_backup: False
    filename: "./application/backup.pickle"
    frequency: [0, 3, 0, 0]

  options:
    activate_room_password: False



production:
  env: "production"
  flask:
    address: ${ADDRESS}
    host: ${HOST}
    port: ${PORT}
    debug: False
    testing: False
    templates_auto_reload: False

  socketio:
    engineio_logger: False
    logger: True

  odoo:
    erp:
      url: ${ERP_URL}
      db: ${ERP_DB}
      username: ${ERP_USERNAME}
      password: ${ERP_PASSWORD}
      verbose: False

staging:
  env: "staging"
  flask:
    address: ${ADDRESS}
    host: ${HOST}
    port: ${PORT}
    debug: False
    testing: False
    templates_auto_reload: True

  socketio:
    engineio_logger: True
    logger: True
 
  odoo:
    erp:
      url: ${ERP_URL}
      db: ${ERP_DB}
      username: ${ERP_USERNAME}
      password: ${ERP_PASSWORD}
      verbose: False

development:
  env: "development"
  flask:
    address: "http://localhost:5000"
    host: "http://localhost"
    port: "5000"
    debug: False
    testing: False
    templates_auto_reload: True

  socketio:
    engineio_logger: True
    logger: True 

  odoo:
    erp:
      url: ""
      db: ""
      username: ""
      password: ""
      verbose: False

